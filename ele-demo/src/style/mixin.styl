//  任何一个盒子可能都要用到的css
$blue = #3190e8
$bc = #e4e4e4
$fc = #ffffff

wh($width, $height)
    width $width
    height $height

sc($fz, $col)
    font-size $fz
    color $col

ct()
    position absolute
    top 50%
    transform translateY(-50%)

fj($type=space-between)
    display: flex
    justify-content: $type
    padding 0 .45rem
    span:nth-of-type(1)
        sc(.55rem, #666)
    span:nth-of-type(2)
        sc(.475rem, #9f9f9f)
        font-weight 900

center()
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)